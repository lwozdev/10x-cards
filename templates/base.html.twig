<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    {# Google Fonts - Roboto for Material 3 #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}

    <script>
        (function () {
            const root = document.documentElement;
            const key = 'theme';
            const saved = localStorage.getItem(key) || 'system';

            if (saved === 'dark') root.classList.add('dark');
            else if (saved === 'light') root.classList.remove('dark');
            else {
                const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
                root.classList.toggle('dark', prefersDark);
            }
        })();
    </script>


</head>
<body>
<div class="min-h-screen bg-[var(--color-surface)] flex flex-col">
    {# Navigation Bar #}
    <nav class="w-full bg-[var(--color-surface-container)] border-b border-[var(--color-outline-variant)] px-4 py-3">
        <div class="max-w-7xl mx-auto flex items-center justify-between">
            {# Logo/Brand #}
            <a href="{{ path('generate_view') }}" class="flex items-center gap-2">
                <svg class="w-8 h-8" viewBox="0 0 24 24" fill="var(--color-primary)">
                    <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
                </svg>
                <span class="text-headline-small font-medium text-[var(--color-on-surface)]">Fiszki AI</span>
            </a>

            {# Navigation Links #}
            <div class="flex items-center gap-3">
                {% block nav_links %}
                    {# Default navigation links #}
                    {% if not app.user %}
                        <twig:Button
                            label="Zaloguj siƒô"
                            variant="text"
                            href="{{ path('app_login') }}"
                            size="medium"
                        />
                        <twig:Button
                            label="Zarejestruj siƒô"
                            variant="filled"
                            href="{{ path('app_register') }}"
                            size="medium"
                        />
                    {% else %}
                        <span class="text-body-medium text-[var(--color-on-surface-variant)] font-medium">
                            {{ app.user.userIdentifier }}
                        </span>
                        <a href="{{ path('set_list') }}" class="text-body-medium text-[var(--color-on-surface)]">
                            Moje zestawy
                        </a>
                        <a href="{{ path('app_logout') }}" class="text-body-medium text-[var(--color-on-surface)]">
                            Wyloguj
                        </a>
                    {% endif %}
                    <button
                        type="button"
                        data-controller="theme"
                        data-action="click->theme#toggle"
                        class="inline-flex items-center gap-2 rounded-md px-3 py-2"
                    >
                        <span data-theme-target="icon">üåô</span>
                        <span data-theme-target="label" class="text-sm">system</span>
                    </button>
                {% endblock %}
            </div>
        </div>
    </nav>

    {# Main Content Area - can be fully overridden by pages that need custom layout #}
    {% block body %}
        {# Flash Messages #}
        {% if app.flashes|length > 0 %}
        <div class="w-full max-w-[512px] mx-auto mt-6 px-4">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="mb-3 p-4 rounded-lg {% if label == 'error' %}bg-[var(--color-error-container)] text-[var(--color-on-error-container)]{% elseif label == 'success' %}bg-green-100 text-green-800{% else %}bg-blue-100 text-blue-800{% endif %}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        {% endif %}

        {# Default centered layout for auth pages - can be overridden #}
        <main class="flex-1 flex items-center justify-center p-4">
            <div class="w-full max-w-[512px]">
                {% block content %}
                    {# Page-specific content goes here #}
                {% endblock %}
            </div>
        </main>
    {% endblock %}

    {# Footer #}
    <footer class="w-full py-6 text-center text-body-small text-[var(--color-on-surface-variant)]">
        <p>&copy; {{ "now"|date("Y") }} Fiszki AI. Wszelkie prawa zastrze≈ºone.</p>
    </footer>
</div>
</body>
</html>
