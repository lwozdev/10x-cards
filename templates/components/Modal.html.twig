<div
    id="{{ this.getId() }}"
    class="{{ this.getBackdropClasses() }}"
    data-controller="modal"
    data-modal-dismissible-value="{{ dismissible ? 'true' : 'false' }}"
    data-action="click->modal#closeOnBackdrop keydown.esc->modal#closeOnEscape"
    style="display: none;"
>
    <div
        class="{{ this.getDialogClasses() }}"
        data-modal-target="dialog"
        data-action="click->modal#stopPropagation"
        {{ this.getAttributesString()|raw }}
    >
        {% if headline or supportingText %}
            <div class="{{ this.getHeaderClasses() }}">
                {% if this.headline %}
                    <h2 id="{{ this.getId() }}_headline" class="{{ this.getHeadlineClasses() }}">
                        {{ this.headline }}
                    </h2>
                {% endif %}

                {% if this.supportingText %}
                    <p id="{{ this.getId() }}_description" class="{{ this.getSupportingTextClasses() }}">
                        {{ this.supportingText }}
                    </p>
                {% endif %}
            </div>
        {% endif %}

        <div class="{{ this.getContentClasses() }}">
            {% block content %}{% endblock %}
        </div>

        <div class="{{ this.getActionsClasses() }}">
            {% block actions %}
                <twig:Button
                    label="Anuluj"
                    variant="text"
                    data-action="click->modal#close"
                />
                <twig:Button
                    label="OK"
                    variant="filled"
                    data-action="click->modal#confirm"
                />
            {% endblock %}
        </div>
    </div>
</div>
