<div
    id="{{ this.getId() }}"
    class="{{ this.getContainerClasses() }}"
    data-controller="snackbar"
    data-snackbar-duration-value="{{ this.duration }}"
    role="status"
    aria-live="polite"
    style="display: none;"
>
    <span class="{{ this.getMessageClasses() }}">{{ this.message }}</span>

    {% if this.actionLabel %}
        <button
            type="button"
            class="{{ this.getActionButtonClasses() }}"
            data-action="click->snackbar#action"
        >
            {{ this.actionLabel }}
        </button>
    {% endif %}

    <button
        type="button"
        class="{{ this.getCloseButtonClasses() }}"
        data-action="click->snackbar#close"
        aria-label="Zamknij"
    >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
    </button>
</div>
