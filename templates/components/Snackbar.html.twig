<div
    id="{{ getId() }}"
    class="{{ getContainerClasses() }}"
    data-controller="snackbar"
    data-snackbar-duration-value="{{ duration }}"
    role="status"
    aria-live="polite"
    style="display: none;"
>
    <span class="{{ getMessageClasses() }}">{{ message }}</span>

    {% if actionLabel %}
        <button
            type="button"
            class="{{ getActionButtonClasses() }}"
            data-action="click->snackbar#action"
        >
            {{ actionLabel }}
        </button>
    {% endif %}

    <button
        type="button"
        class="{{ getCloseButtonClasses() }}"
        data-action="click->snackbar#close"
        aria-label="Zamknij"
    >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
    </button>
</div>
