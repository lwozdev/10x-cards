<div class="{{ this.getContainerClasses() }}" {% if this.id %}id="{{ this.id }}"{% endif %}>
    {# Top App Bar #}
    {% if this.showTopBar %}
        <header class="{{ this.getTopBarClasses() }}">
            {% block topBarLeading %}
                {# Menu icon or back button can go here #}
            {% endblock %}

            <h1 class="{{ this.getTitleClasses() }}">{{ this.title }}</h1>

            {% block topBarActions %}
                {# Action buttons (search, more, etc.) can go here #}
            {% endblock %}
        </header>
    {% endif %}

    {# Main Content Area #}
    <div class="{{ this.getMainClasses() }}">
        {# Navigation Drawer (Desktop) #}
        {% if this.showNavDrawer and this.hasNavigation() %}
            <twig:NavDrawer
                :destinations="navDestinations"
                :currentPath="currentPath"
                variant="permanent"
            />
        {% endif %}

        {# Navigation Rail (Tablet) #}
        {% if this.showNavRail and this.hasNavigation() %}
            <twig:NavRail
                :destinations="navDestinations"
                :currentPath="currentPath"
            />
        {% endif %}

        {# Main Content #}
        <main class="{{ this.getContentClasses() }}">
            {% block content %}{% endblock %}
        </main>
    </div>

    {# Bottom Navigation (Mobile) #}
    {% if this.showBottomNav and this.hasNavigation() %}
        <twig:BottomNav
            :destinations="navDestinations"
            :currentPath="currentPath"
        />
    {% endif %}

    {# Floating Action Button #}
    {% if this.fabIcon %}
        {% if this.fabHref %}
            <a href="{{ this.fabHref }}" class="{{ this.getFabClasses() }}">
                <svg class="{{ this.getFabIconClasses() }}" aria-hidden="true">
                    <use href="{{ this.fabIcon }}"></use>
                </svg>
            </a>
        {% else %}
            <button type="button" class="{{ this.getFabClasses() }}" data-action="click->scaffold#fabClick">
                <svg class="{{ this.getFabIconClasses() }}" aria-hidden="true">
                    <use href="{{ this.fabIcon }}"></use>
                </svg>
            </button>
        {% endif %}
    {% endif %}

    {% block fab %}{% endblock %}
</div>
