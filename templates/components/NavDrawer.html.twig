<nav class="{{ this.getContainerClasses() }}" {% if this.id %}id="{{ this.id }}"{% endif %} {% if this.variant == 'modal' %}data-controller="drawer"{% endif %}>
    {% for destination in this.destinations %}
        <a
            href="{{ destination.path }}"
            class="{{ this.getDestinationClasses(destination) }}"
            {% if this.isActive(destination) %}aria-current="page"{% endif %}
        >
            <svg class="{{ this.getIconClasses() }}" aria-hidden="true">
                <use href="{{ destination.icon }}"></use>
            </svg>

            <span class="{{ this.getLabelClasses() }}">{{ destination.label }}</span>

            {% if destination.badge is defined and destination.badge > 0 %}
                <span class="{{ this.getBadgeClasses() }}">
                    {{ destination.badge > 99 ? '99+' : destination.badge }}
                </span>
            {% endif %}
        </a>
    {% endfor %}
</nav>

{% if this.variant == 'modal' %}
    {# Backdrop for modal drawer #}
    <div
        class="fixed inset-0 z-40 bg-black/50 backdrop-blur-sm"
        data-drawer-target="backdrop"
        data-action="click->drawer#close"
        style="display: none;"
    ></div>
{% endif %}
