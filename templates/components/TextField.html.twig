<div class="{{ getContainerClasses() }}">
    <div class="{{ getInputWrapperClasses() }}">
        {% if leadingIcon %}
            <svg class="{{ getIconClasses() }} left-4" aria-hidden="true">
                <use href="{{ leadingIcon }}"></use>
            </svg>
        {% endif %}

        <input
            type="{{ type }}"
            id="{{ getId() }}"
            name="{{ name }}"
            value="{{ value }}"
            placeholder="{{ placeholder ?: label }}"
            class="{{ getInputClasses() }} peer"
            {{ getAttributesString()|raw }}
        >

        <label for="{{ getId() }}" class="{{ getLabelClasses() }} peer-placeholder-shown:top-[18px] peer-placeholder-shown:text-body-large peer-placeholder-shown:scale-100 peer-focus:top-[8px] peer-focus:text-label-small peer-focus:scale-100">
            {{ label }}{% if required %}<span class="text-[var(--color-error)] ml-0.5">*</span>{% endif %}
        </label>

        {% if trailingIcon %}
            <svg class="{{ getIconClasses() }} right-4" aria-hidden="true">
                <use href="{{ trailingIcon }}"></use>
            </svg>
        {% endif %}
    </div>

    {% if getSupportingText() %}
        <div id="{{ getId() }}_support" class="{{ getSupportingTextClasses() }}">
            {{ getSupportingText() }}
        </div>
    {% endif %}
</div>
