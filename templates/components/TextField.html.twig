<div class="{{ this.getContainerClasses() }}">
    <div class="{{ this.getInputWrapperClasses() }}">
        {% if this.leadingIcon %}
            <svg class="{{ this.getIconClasses() }} left-4" aria-hidden="true">
                <use href="{{ this.leadingIcon }}"></use>
            </svg>
        {% endif %}

        <input
            type="{{ this.type }}"
            id="{{ this.getId() }}"
            name="{{ this.name }}"
            value="{{ this.value }}"
            placeholder="{{ this.placeholder ?: this.label }}"
            class="{{ this.getInputClasses() }} peer"
            {{ this.getAttributesString()|raw }}
        >

        <label for="{{ this.getId() }}" class="{{ this.getLabelClasses() }} peer-placeholder-shown:top-[18px] peer-placeholder-shown:text-body-large peer-placeholder-shown:scale-100 peer-focus:top-[8px] peer-focus:text-label-small peer-focus:scale-100">
            {{ this.label }}{% if this.required %}<span class="text-[var(--color-error)] ml-0.5">*</span>{% endif %}
        </label>

        {% if this.trailingIcon %}
            <svg class="{{ this.getIconClasses() }} right-4" aria-hidden="true">
                <use href="{{ this.trailingIcon }}"></use>
            </svg>
        {% endif %}
    </div>

    {% if this.getSupportingText() %}
        <div id="{{ this.getId() }}_support" class="{{ this.getSupportingTextClasses() }}">
            {{ this.getSupportingText() }}
        </div>
    {% endif %}
</div>
