{% extends 'base.html.twig' %}

{% block title %}Edytuj zestaw - {{ setName }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8"
     data-controller="edit-existing-set"
     data-edit-existing-set-set-id-value="{{ setId }}"
     data-edit-existing-set-initial-cards-value="{{ cards|json_encode }}"
     data-edit-existing-set-initial-name-value="{{ setName }}">

    {# PageHeader #}
    <header class="mb-8">
        <h1 class="text-3xl font-bold mb-2">Edytuj zestaw</h1>
        <p class="text-gray-600">Edytuj nazwę zestawu, modyfikuj treść fiszek lub usuń niepotrzebne.</p>
    </header>

    {# Flash messages #}
    {% for message in app.flashes('error') %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
            <span class="block sm:inline">{{ message }}</span>
        </div>
    {% endfor %}

    {# Main form #}
    <form data-action="submit->edit-existing-set#handleSave" class="max-w-4xl mx-auto">

        {# SetNameInput Component #}
        <div class="mb-6">
            <label for="set-name" class="block text-sm font-medium text-gray-700 mb-2">
                Nazwa zestawu
            </label>
            <input
                type="text"
                id="set-name"
                data-edit-existing-set-target="setNameInput"
                data-action="input->edit-existing-set#updateSetName"
                value="{{ setName }}"
                placeholder="Wprowadź nazwę zestawu (min. 3 znaki)"
                class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                required
                minlength="3"
                maxlength="100"
            />
            <p class="mt-1 text-sm text-gray-500" data-edit-existing-set-target="setNameHint">
                Minimum 3 znaki, maksimum 100 znaków
            </p>
        </div>

        {# StatsBar Component #}
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-6">
            <div class="flex justify-between items-center text-sm">
                <div>
                    <span class="font-semibold">Liczba fiszek:</span>
                    <span data-edit-existing-set-target="cardsCount">{{ cardCount }}</span>
                </div>
                <div>
                    <span class="font-semibold">Źródło:</span>
                    {% if isAiGenerated %}
                        <span class="bg-blue-600 text-white px-2 py-1 rounded text-xs">AI</span>
                    {% else %}
                        <span class="bg-gray-600 text-white px-2 py-1 rounded text-xs">Ręczne</span>
                    {% endif %}
                </div>
            </div>
        </div>

        {# CardsList Component #}
        <div class="mb-6">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-semibold">Fiszki (<span data-edit-existing-set-target="cardsCountHeader">{{ cardCount }}</span>)</h2>
                <button type="button"
                        data-action="click->edit-existing-set#addCard"
                        class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg transition">
                    + Dodaj fiszkę
                </button>
            </div>

            <div data-edit-existing-set-target="cardsList" class="space-y-4">
                {% for card in cards %}
                    {# CardItem Component #}
                    <div data-edit-existing-set-target="cardItem"
                         data-card-id="{{ card.id }}"
                         data-index="{{ loop.index0 }}"
                         class="border border-gray-300 rounded-lg p-4 bg-white hover:shadow-md transition">

                        <div class="flex justify-between items-start mb-3">
                            <span class="text-sm font-semibold text-gray-500">Fiszka #<span class="card-number">{{ loop.index }}</span></span>
                            <button type="button"
                                    data-action="click->edit-existing-set#deleteCard"
                                    data-index="{{ loop.index0 }}"
                                    class="text-red-600 hover:text-red-800 text-sm font-medium">
                                Usuń
                            </button>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            {# Front textarea #}
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                    Przód (pytanie)
                                </label>
                                <textarea
                                    data-edit-existing-set-target="frontTextarea"
                                    data-action="input->edit-existing-set#updateCard"
                                    data-index="{{ loop.index0 }}"
                                    data-field="front"
                                    rows="3"
                                    class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 resize-y"
                                    required
                                    placeholder="Wpisz pytanie..."
                                >{{ card.front }}</textarea>
                            </div>

                            {# Back textarea #}
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                    Tył (odpowiedź)
                                </label>
                                <textarea
                                    data-edit-existing-set-target="backTextarea"
                                    data-action="input->edit-existing-set#updateCard"
                                    data-index="{{ loop.index0 }}"
                                    data-field="back"
                                    rows="3"
                                    class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 resize-y"
                                    required
                                    placeholder="Wpisz odpowiedź..."
                                >{{ card.back }}</textarea>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {# Empty state when no cards #}
            <div data-edit-existing-set-target="emptyState" class="{% if cards|length > 0 %}hidden{% endif %} text-center py-8 bg-gray-50 rounded-lg border border-gray-200">
                <p class="text-gray-600 mb-4">Ten zestaw nie ma jeszcze żadnych fiszek.</p>
                <button type="button"
                        data-action="click->edit-existing-set#addCard"
                        class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg transition">
                    + Dodaj pierwszą fiszkę
                </button>
            </div>
        </div>

        {# Action buttons #}
        <div class="flex gap-4 justify-end">
            {# CancelButton #}
            <a href="{{ path('set_list') }}"
               class="px-6 py-3 border border-gray-300 rounded-lg font-semibold text-gray-700 hover:bg-gray-50 transition text-center">
                Anuluj
            </a>

            {# SaveButton #}
            <button type="submit"
                    data-edit-existing-set-target="saveButton"
                    class="px-6 py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 disabled:bg-gray-300 disabled:cursor-not-allowed transition">
                <span data-edit-existing-set-target="saveButtonText">Zapisz zmiany</span>
            </button>
        </div>
    </form>

    {# Delete Confirmation Modal #}
    <dialog data-edit-existing-set-target="deleteModal" class="rounded-lg shadow-xl p-6 max-w-md backdrop:bg-gray-900 backdrop:bg-opacity-50">
        <h3 class="text-xl font-bold mb-4">Czy na pewno chcesz usunąć tę fiszkę?</h3>
        <p class="text-gray-700 mb-6">Ta operacja jest nieodwracalna.</p>

        <div class="flex gap-3">
            <button type="button"
                    data-action="click->edit-existing-set#closeDeleteModal"
                    class="flex-1 bg-gray-200 hover:bg-gray-300 py-2 px-4 rounded transition">
                Anuluj
            </button>
            <button type="button"
                    data-action="click->edit-existing-set#confirmDelete"
                    class="flex-1 bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded transition">
                Usuń
            </button>
        </div>
    </dialog>

    {# Loading Overlay #}
    <div data-edit-existing-set-target="loadingOverlay"
         class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white p-8 rounded-lg shadow-xl">
            <div class="flex items-center space-x-4">
                {# Spinner #}
                <svg class="animate-spin h-8 w-8 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <p class="text-lg font-semibold">Zapisywanie zmian...</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
