        document.getElementById('basic-modal').style.display = 'flex';
    });

    document.querySelector('[data-action="click->demo#showFormModal"]')?.addEventListener('click', () => {
        document.getElementById('form-modal').style.display = 'flex';
    });

    document.querySelector('[data-action="click->demo#showConfirmModal"]')?.addEventListener('click', () => {
        document.getElementById('confirm-modal').style.display = 'flex';
    });

    // Snackbar demos
    const showSnackbar = (id) => {
        const snackbar = document.getElementById(id);
        snackbar.style.display = 'flex';
        setTimeout(() => {
            snackbar.style.opacity = '1';
        }, 10);
    };

    document.querySelector('[data-action="click->demo#showInfoSnackbar"]')?.addEventListener('click', () => {
        showSnackbar('info-snackbar');
    });

    document.querySelector('[data-action="click->demo#showSuccessSnackbar"]')?.addEventListener('click', () => {
        showSnackbar('success-snackbar');
    });

    document.querySelector('[data-action="click->demo#showWarningSnackbar"]')?.addEventListener('click', () => {
        showSnackbar('warning-snackbar');
    });

    document.querySelector('[data-action="click->demo#showErrorSnackbar"]')?.addEventListener('click', () => {
        showSnackbar('error-snackbar');
    });

    document.querySelector('[data-action="click->demo#showActionSnackbar"]')?.addEventListener('click', () => {
        showSnackbar('action-snackbar');
    });

    // Listen for snackbar action
    document.addEventListener('snackbar:action', (e) => {
